# Build stage
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copy csproj and restore
COPY ALT.Yarp/ALT.Yarp.csproj ALT.Yarp/
RUN dotnet restore ALT.Yarp/ALT.Yarp.csproj

# Copy everything and build
COPY ALT.Yarp/ ALT.Yarp/
RUN dotnet build ALT.Yarp/ALT.Yarp.csproj -c Release -o /app/build

# Publish stage
FROM build AS publish
RUN dotnet publish ALT.Yarp/ALT.Yarp.csproj -c Release -o /app/publish

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ALT.Yarp.dll"]
