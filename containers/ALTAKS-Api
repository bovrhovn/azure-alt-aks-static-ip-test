# Build stage
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copy csproj and restore
COPY ALT.Api/ALT.Api.csproj ALT.Api/
RUN dotnet restore ALT.Api/ALT.Api.csproj

# Copy everything and build
COPY ALT.Api/ ALT.Api/
RUN dotnet build ALT.Api/ALT.Api.csproj -c Release -o /app/build

# Publish stage
FROM build AS publish
RUN dotnet publish ALT.Api/ALT.Api.csproj -c Release -o /app/publish

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS final
WORKDIR /app
EXPOSE 8080
COPY --from=publish /app/publish .
ENV ASPNETCORE_URLS=http://+:8080
ENTRYPOINT ["dotnet", "ALT.Api.dll"]
